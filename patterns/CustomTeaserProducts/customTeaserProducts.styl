$breakpoint-small = 400px
$breakpoint-medium = 720px
$breakpoint-large = 1200px

teaserLeft()
  .custom-product-teaser__teaser-image
    margin-left -1.8rem

    @media (min-width $breakpoint-small)
      margin-left 0

teaserRight()
  .custom-product-teaser__content
    order -1
    align-items flex-end
    text-align right

    @media (min-width $breakpoint-medium)
      order 0
      align-items flex-start
      text-align left

  .custom-product-teaser__teaser-image
    margin-right -1.8rem

    @media (min-width $breakpoint-small)
      margin-right 0


.custom-product-teaser
  padding 1.2rem 1.5rem

  @media (min-width $breakpoint-medium)
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 3rem 2rem

  @media (min-width $breakpoint-large)
    grid-template-columns 1fr 1fr 1fr 1fr
    padding 1.2rem 2rem

.custom-product-teaser__teaser
  height auto
  overflow hidden

  @media (min-width $breakpoint-small)
    justify-content center
    padding 1rem

  & + &
    margin-top 3rem

    @media (min-width $breakpoint-medium)
      margin-top 0

.custom-product-teaser__teaser-image
  height 28.9rem
  align-self center

  img
    display block
    height auto
    width 60%
    margin-left auto
    margin-right auto

.custom-product-teaser__content
  display flex
  flex-direction column
  align-items flex-start
  padding 4.6rem 1rem 0.6rem

  @media (min-width $breakpoint-small)
    padding-left 2rem
    padding-right 2rem

.custom-product-teaser__pre-title
  display block
  margin-bottom 2.2rem
  letter-spacing 0.1rem

.custom-product-teaser__title
  @media (min-width $breakpoint-small)
    diana()

.custom-product-teaser__button
  margin-top 2rem
  width 100%

.custom-product-teaser--white

  .custom-product-teaser__teaser
    border 1px solid var(--tertiary)

  .custom-product-teaser__pre-title
    color var(--neutral-50)

.custom-product-teaser--colorized

  .custom-product-teaser__teaser
    border-radius 5px

    &:nth-child(6n+1)
      teaserLeft()
      background-image linear-gradient(to bottom, #EB6E68 0%, #61304D 100%)


    &:nth-child(6n+2)
      teaserRight()
      background-image linear-gradient(to bottom, #FDD165 0%, #63B6C8 100%)


    &:nth-child(6n+3)
      teaserLeft()
      background-image linear-gradient(to bottom, #FDD165 0%, #63B6C8 100%)

    &:nth-child(6n+4)
      teaserRight()
      background #EB6E68

    &:nth-child(6n+5)
      teaserLeft()
      background #FDD165

    &:nth-child(6n+6)
      teaserRight()
      background #63B6C8

  .custom-product-teaser__pre-title
    color var(--tertiary)

  .custom-product-teaser__title
    color var(--neutral-10)

.custom-product-teaser__attributes
  width 100%
  margin 2rem 0 1rem 0

  p
    border-bottom 1px solid #999
    padding 1.5rem 0 2rem 0

    span
      color #777
      float right